<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.choice.AutoChoiceView
            android:id="@+id/acv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundColor="#FFF1F1F1"
            app:borderColor="#FFE0E0E0"
            app:borderWidth="10.0dip"
            app:centerPointScale="0.1"
            app:innerCircleBorderColor="#FFE0E0E0"
            app:innerCircleColor="#FFF1F1F1"
            app:innerCircleScale="0.15"
            app:paddingWidth="20.0dip"
            app:pointerColor="#FFE0E0E0"
            app:pointerLengthScale="0.6"/>
        <ListView
            android:id="@+id/lv_choice"
            android:background="@drawable/shape_bg_list"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:0106000D"
            android:divider="@00000000"
            android:dividerHeight="0.0dip"
            android:layout_below="@id/acv"
            android:layout_marginStart="15.0dip"
            android:layout_marginEnd="15.0dip"/>
        <FrameLayout
            android:id="@+id/fl_empty"
            android:background="@drawable/shape_bg_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/acv"
            android:layout_marginStart="15.0dip"
            android:layout_marginEnd="15.0dip">
            <ImageView
                android:layout_gravity="center"
                android:id="@id/iv_add"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:src="@drawable/ic_add"
                android:tint="#FFE0E0E0"
                tools:ignore="UseAppTint" />
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="end|bottom|center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_refresh"
            android:background="@drawable/shape_bg_btn_start"
            android:padding="7.0dip"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:src="@drawable/ic_refresh"
            android:tint="@color/colorPrimary"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            android:elevation="2.0dip"
            tools:ignore="UseAppTint" />
        <ImageView
            android:id="@+id/iv_select"
            android:background="@drawable/shape_bg_btn_start"
            android:padding="3.0dip"
            android:layout_width="44.0dip"
            android:layout_height="44.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="10.0dip"
            android:src="@drawable/ic_select"
            android:tint="@color/colorPrimary"
            android:layout_marginStart="24.0dip"
            android:layout_marginEnd="24.0dip"
            android:elevation="2.0dip"
            tools:ignore="UseAppTint" />
    </LinearLayout>
</FrameLayout>