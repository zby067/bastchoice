<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"/>
    <RelativeLayout
        android:background="@drawable/shape_bg_choice_add"
        android:padding="5.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18.0sp"
            android:textColor="@android:0106000C"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:text="添加/编辑选项"
            android:layout_toStartOf="@id/iv_close"/>
        <ImageView
            android:id="@id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"/>
        <EditText
            android:textSize="16.0sp"
            android:gravity="top"
            android:id="@+id/et_desc"
            android:background="@drawable/shape_bg_edittext"
            android:padding="10.0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入选项描述"
            android:maxLines="3"
            android:minLines="3"
            android:maxLength="30"
            android:layout_below="@id/iv_close"
            android:layout_marginStart="15.0dip"
            android:layout_marginEnd="15.0dip"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:layout_below="@id/et_desc"
            android:layout_marginStart="15.0dip"
            android:layout_marginEnd="15.0dip">
            <TextView
                android:textSize="16.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色"
                android:includeFontPadding="true"/>
            <ImageView
                android:id="@id/iv_color"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:src="@drawable/shape_circle"
                android:tint="@color/colorPrimary"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="10.0dip"
                tools:ignore="UseAppTint" />
            <TextView
                android:textSize="16.0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权重"
                android:includeFontPadding="true"
                android:layout_marginStart="20.0dip"/>
            <EditText
                android:textSize="16.0sp"
                android:id="@+id/et_weight"
                android:background="@drawable/shape_bg_edittext"
                android:padding="10.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:hint="请输入权重，1-1000"
                android:digits="0123456789"
                android:inputType="phone"
                android:layout_marginStart="15.0dip"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_gravity="end"
            android:id="@+id/tv_confirm"
            android:padding="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_below="@id/ll"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"/>
</LinearLayout>